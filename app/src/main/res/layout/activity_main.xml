<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ImageButton
        android:id="@+id/infoGardenButton"
        android:layout_width="210dp"
        android:layout_height="234dp"
        android:layout_marginTop="25dp"
        android:background="#00000000"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/logogardenhabits" />

    <ImageButton
        android:id="@+id/pomodoroButton"
        android:layout_width="113dp"
        android:layout_height="118dp"
        android:layout_marginStart="55dp"
        android:layout_marginLeft="55dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="74dp"
        android:layout_marginRight="74dp"
        app:layout_constraintEnd_toStartOf="@+id/habitosButton"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/infoGardenButton"
        app:srcCompat="@drawable/logopomodoro" />

    <ImageButton
        android:id="@+id/calendarioButton"
        android:layout_width="115dp"
        android:layout_height="118dp"
        android:layout_marginStart="55dp"
        android:layout_marginLeft="55dp"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="72dp"
        android:layout_marginRight="72dp"
        app:layout_constraintEnd_toStartOf="@+id/recompensasButton"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/pomodoroButton"
        app:srcCompat="@drawable/logocalendario" />

    <ImageButton
        android:id="@+id/recompensasButton"
        android:layout_width="115dp"
        android:layout_height="118dp"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="55dp"
        android:layout_marginRight="55dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/habitosButton"
        app:srcCompat="@drawable/logohoja" />

    <ImageButton
        android:id="@+id/habitosButton"
        android:layout_width="115dp"
        android:layout_height="118dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="55dp"
        android:layout_marginRight="55dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/infoGardenButton"
        app:srcCompat="@drawable/hojahum" />

    <ImageButton
        android:id="@+id/infobtnsButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="150dp"
        android:background="#00000000"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/infobtns" />

</androidx.constraintlayout.widget.ConstraintLayout>